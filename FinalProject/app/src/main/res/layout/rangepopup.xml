<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryColor">

    <com.crystal.crystalrangeseekbar.widgets.BubbleThumbRangeSeekbar
        android:id="@+id/rangeSeekbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corner_radius="10"
        app:min_value="0"
        app:max_value="400"
        app:steps="5"
        app:bar_color="#F7BB88"
        app:bar_highlight_color="#E07416"
        app:left_thumb_image="@drawable/seek_thumb_normal"
        app:right_thumb_image="@drawable/seek_thumb_normal"
        app:left_thumb_image_pressed="@drawable/seek_thumb_pressed"
        app:right_thumb_image_pressed="@drawable/seek_thumb_pressed"
        app:data_type="_integer"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btApply"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/rangeSeekbar5"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btApply"
        android:layout_toEndOf="@+id/btApply"
        android:layout_marginStart="26dp"
        android:id="@+id/btReset" />
</RelativeLayout>