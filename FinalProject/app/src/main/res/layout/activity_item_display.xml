<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.yugenshtil.finalproject.model.ItemDisplayActivity"
    android:background="@color/cardview_light_background">


    <TextView
        android:id="@+id/tvItemBuy_Title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="48dp"
        android:fontFamily="sans-serif"
        android:singleLine="false"
        android:maxLines="2"
        android:lines="2"
        android:text="Sois comme l'eau mon ami"
        android:width="0dip"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/ivItemBuy_Favorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:paddingLeft="6dp"
        android:layout_marginLeft="96dp"
        android:src="@drawable/ic_update_black_36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_price"
        android:layout_alignStart="@+id/tv_price" />

    <ImageView
        android:id="@+id/imDelete_itemDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_36dp"
        android:paddingRight="6dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivItemBuy_Favorite"
        android:layout_marginStart="58dp" />

    <ImageView
        android:id="@+id/ivImage_ItemDisplay"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingLeft="6dp"
        android:src="@drawable/noimageavailable"
        android:layout_alignTop="@+id/tvItemBuy_Title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvItemBuy_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="48dp"
        android:ellipsize="start"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="Desc"
        android:textColor="#7E7E7E"
        android:textSize="20sp"
        android:layout_below="@+id/ivImage_ItemDisplay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/tvItemBuy_Price"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="Price"
        android:textColor="#7E7E7E"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/ivImage_ItemDisplay"
        android:layout_alignStart="@+id/ivItemBuy_Favorite"
        android:layout_marginBottom="15dp" />

</RelativeLayout>


