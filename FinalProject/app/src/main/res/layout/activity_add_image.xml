<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yugenshtil.finalproject.Item.AddImage">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLoad"
        android:layout_toEndOf="@+id/ivImage"
        android:layout_marginTop="14dp"
        android:id="@+id/btnSubmit_addImage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_search_black_24dp"
        android:id="@+id/ivLoad"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_a_photo_black_36dp"
        android:layout_marginTop="24dp"
        android:id="@+id/ivCamera"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivLoad" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_collections_black_36dp"
        android:id="@+id/ivGallery"
        android:layout_alignTop="@+id/ivCamera"
        android:layout_toEndOf="@+id/ivImage"
        android:layout_marginStart="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_file_upload_black_36dp"
        android:id="@+id/ivUpload"
        android:layout_alignBottom="@+id/ivLoad"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivImage"
        android:layout_toStartOf="@+id/ivImage"
        android:layout_marginTop="61dp"
        android:id="@+id/decod"
        android:layout_alignBottom="@+id/ivImage" />

    <Button
        android:text="Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btGetFromServer_AddImage"
        android:layout_alignBottom="@+id/ivUpload"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivImage"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/ivCamera"
        android:layout_alignStart="@+id/ivLoad"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageFromServer"
        android:layout_alignTop="@+id/ivImage"
        android:layout_toEndOf="@+id/ivUpload"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Gonna upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageFromServer"
        android:layout_toEndOf="@+id/ivLoad"
        android:layout_marginStart="7dp"
        android:layout_marginTop="61dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/btnSubmit_addImage"
        android:id="@+id/textView5" />
</RelativeLayout>
