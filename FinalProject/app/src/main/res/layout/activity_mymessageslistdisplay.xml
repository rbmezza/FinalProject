<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yugenshtil.finalproject.model.MyMessagesListDisplayActivity"
    android:background="#d7d5d5"
    android:orientation="vertical"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recViewMessageList"
        android:layout_marginLeft="1dp"
        android:paddingLeft="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.46"
        android:background="#efeeee"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/tv_messageContent"
        android:layout_weight="0.12"
        android:hint="Write a mesage..."
        android:textColor="@android:color/black" />

    <Button
        android:text="Send"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sendMessageButton" />

</LinearLayout>
