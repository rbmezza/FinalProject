<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ff0000">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="154dp"
        android:id="@+id/userMenuBuyButton"
        android:src="@drawable/bt2buy"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/userMenuSellButton"
        app:layout_constraintHorizontal_bias="0.46" />

    <ImageView
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:id="@+id/userMenuHistoryButton"
        android:src="@drawable/bt3history"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/userMenuSellButton"
        app:layout_constraintBottom_toTopOf="@+id/userMenuMessagesButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.57" />

    <ImageView
        android:layout_width="159dp"
        android:layout_height="150dp"
        android:id="@+id/userMenuMyFavoritesButton"
        android:src="@drawable/bt4myfavorites"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userMenuHistoryButton"
        app:layout_constraintLeft_toRightOf="@+id/userMenuHistoryButton"
        app:layout_constraintHorizontal_bias="0.75" />

    <ImageView
        android:layout_width="157dp"
        android:layout_height="156dp"
        android:id="@+id/userMenuMessagesButton"
        android:src="@drawable/bt5mymessages"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="157dp"
        android:layout_height="156dp"
        android:id="@+id/userMenuContactUsButton"
        android:src="@drawable/bt6contactus"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/userMenuMessagesButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.43" />

    <ImageView
        android:layout_width="155dp"
        android:layout_height="154dp"
        android:id="@+id/userMenuSellButton"
        android:src="@drawable/bt1sell"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>