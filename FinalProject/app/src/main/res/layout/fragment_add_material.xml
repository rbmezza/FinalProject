<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AddMaterial">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:text="Please add item info:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_MaterialTitle"
            android:textSize="24sp"
            android:textColor="@android:color/black" />
        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_addMaterialTitle"
            android:hint="Post Title"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_addMaterialPrice"
            android:hint="Price"
            android:layout_below="@+id/tv_addMaterialTitle"
            android:layout_alignStart="@+id/tv_addMaterialTitle" />


        <EditText
            android:layout_width="320sp"
            android:layout_height="130dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_below="@+id/tv_addMaterialPickUpDate"
            android:layout_alignStart="@+id/tv_addMaterialPickUpDate"
            android:id="@+id/tv_AddMaterialDesc"
            android:hint="Description..." />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/tv_addMaterialPickUpDate"
            android:hint="Pick Up Date"
            android:layout_below="@+id/tv_addMaterialProgram"
            android:layout_alignStart="@+id/tv_addMaterialProgram" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_addMaterialProgram"
            android:hint="Program"
            android:layout_below="@+id/tv_addMaterialPrice"
            android:layout_alignStart="@+id/tv_addMaterialPrice" />




    </RelativeLayout>

</FrameLayout>
