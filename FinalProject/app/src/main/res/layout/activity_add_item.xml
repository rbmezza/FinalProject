<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.yugenshtil.finalproject.item.AddItem">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/itemfrag"
        android:text="Book frag"
        android:name="layout.NoItemAdded"
        android:layout_below="@+id/btAddItem_Book"
        android:layout_alignParentEnd="true"></fragment>


    <Button
        android:text="Book"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:id="@+id/btAddItem_Book"
        android:onClick="changeFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Material"
        android:layout_width="143dp"
                android:layout_height="wrap_content"
        android:id="@+id/btAddItem_Material"
        android:onClick="changeFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAddItem_Save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_a_photo_black_36dp"
        android:id="@+id/ibAddItem_Image"
        android:layout_above="@+id/itemfrag"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp" />

    <Spinner
        android:id="@+id/sp_itemtype"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btAddItem_Save"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
